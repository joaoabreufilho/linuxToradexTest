#include "imx7d.dtsi"
#include "imx7-colibri.dtsi"

/ {
	memory {
		reg = <0x80000000 0x20000000>;
	};

	cpus {
		cpu0: cpu@0 {
			operating-points = <
				/* KHz	uV */
				996000	1075000
				792000	975000
			>;
		};
	};
};

&gpmi {
	status = "okay";
};

&usbotg2 {
	dr_mode = "host";
};
